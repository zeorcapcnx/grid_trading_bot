# Production Environment Variables Template
# Copy this to .env.production and fill with your real values

# Binance API credentials (get from binance.com -> API Management)
EXCHANGE_API_KEY=your_binance_api_key_here
EXCHANGE_SECRET_KEY=your_binance_secret_key_here

# Optional: Telegram notifications
# APPRISE_NOTIFICATION_URLS=tgram://bottoken/ChatID

# Grafana dashboard password
GRAFANA_ADMIN_PASSWORD=your_secure_password_here

# Safety settings
ENVIRONMENT=production
DEBUG=false